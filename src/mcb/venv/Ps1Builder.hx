package mcb.venv;

class Ps1Builder {
	public static function build(name:String, call:String, variables:Map<String, String>):String {
		var ps1 = '# Generated by mcb.venv\n';
		for (k => v in variables) {
			ps1 += '. { ${"$"}env:' + k + '="' + v + '" }\n';
		}
		ps1 += ". " + call + '\n';
		return ps1;
	}
}
